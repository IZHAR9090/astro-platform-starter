import Layout from '../../../layouts/Layout.astro';
import EdgeFunctionExplainer from '../../../components/EdgeFunctionExplainer.astro';

<Layout title="image-cdn">
   <section class="w-full bg-black text-white py-20 px-4 sm:px-12">
  <div class="text-center mb-12">
    <h2 class="text-4xl sm:text-5xl font-bold text-white mb-4">Get in Touch with WPC</h2>
    <p class="text-gray-400 max-w-2xl mx-auto text-sm sm:text-base">
      Welcome to WPC Contact Us page. We're here to assist you with any inquiries, requests, or feedback you may have.
      We're just a message away. Reach out to us, and let's start a conversation.
    </p>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 max-w-6xl mx-auto">
    <!-- Email -->
    <div class="bg-[#1f1f27] rounded-md p-6 flex flex-col items-center justify-center text-center relative">
      <img src="/images/email-icon.png" alt="Email" class="w-10 h-10 mb-3" />
      <p class="text-sm text-white">info@wpc.com</p>
      <span class="absolute top-3 right-3 text-gray-500 text-xl">↗</span>
    </div>

    <!-- Phone -->
    <div class="bg-[#1f1f27] rounded-md p-6 flex flex-col items-center justify-center text-center relative">
      <img src="/images/phone-icon.png" alt="Phone" class="w-10 h-10 mb-3" />
      <p class="text-sm text-white">+1 (123) 456-7890</p>
      <span class="absolute top-3 right-3 text-gray-500 text-xl">↗</span>
    </div>

    <!-- Location -->
    <div class="bg-[#1f1f27] rounded-md p-6 flex flex-col items-center justify-center text-center relative">
      <img src="/images/location-icon.png" alt="Location" class="w-10 h-10 mb-3" />
      <p class="text-sm text-white">Main Headquarters</p>
      <span class="absolute top-3 right-3 text-gray-500 text-xl">↗</span>
    </div>

    <!-- Social Links -->
    <div class="bg-[#1f1f27] rounded-md p-6 flex flex-col items-center justify-center text-center relative">
      <img src="/images/social-icon.png" alt="Social" class="w-10 h-10 mb-3" />
      <div class="flex gap-3 text-sm text-white">
        <a href="#" class="hover:underline">Instagram</a>
        <a href="#" class="hover:underline">LinkedIn</a>
        <a href="#" class="hover:underline">Facebook</a>
      </div>
      <span class="absolute top-3 right-3 text-gray-500 text-xl">↗</span>
    </div>
  </div>
</section>

</Layout>



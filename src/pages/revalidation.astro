---
import Layout from '../layouts/Layout.astro';
---

<Layout title="World Players Club - Video Showcase">
  <section class="min-h-screen flex flex-col items-center justify-center gap-8 py-12 bg-black text-white">

    <h1 class="text-3xl font-bold text-center">Featured Videos</h1>

    <div class="flex flex-col gap-10 w-full max-w-3xl px-4">
      <!-- Video 1 -->
      <video controls class="w-full rounded-lg shadow-lg">
        <source src="/videos/p1.mp4" type="video/mp4" />
        Your browser does not support the video tag.
      </video>

      <!-- Video 2 -->
      <video controls class="w-full rounded-lg shadow-lg">
        <source src="/videos/p2.mp4" type="video/mp4" />
        Your browser does not support the video tag.
      </video>

      <!-- Video 3 -->
      <video controls class="w-full rounded-lg shadow-lg">
        <source src="/videos/p3.mp4" type="video/mp4" />
        Your browser does not support the video tag.
      </video>

      <!-- Video 4 -->
      <video controls class="w-full rounded-lg shadow-lg">
        <source src="/videos/p4.mp4" type="video/mp4" />
        Your browser does not support the video tag.
      </video>
      
    </div>

  </section>
</Layout>

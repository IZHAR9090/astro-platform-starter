---
import Layout from '../layouts/Layout.astro';
import Markdown from '../components/Markdown.astro';
import ContextAlert from '../components/ContextAlert.astro';

const explainer = `The Royal Casino will bring you the real experience.`;
---

<Layout title="World Players Club">

  <!-- ✅ Hero Background Section -->
  <section class="w-full bg-black">
    <div
      class="bg-no-repeat bg-top bg-center"
      style="background-image: url('/images/header-bg.png'); background-size: 1440px auto; height: 800px;"
    >
      <div class="px-6 pt-32 sm:px-12 text-white">
        <h3 class="text-xl mb-2">Welcome!</h3>
        <h1 class="text-4xl font-bold text-yellow-400 mb-2">WPC CASINO</h1>
        <h4 class="text-xl mb-4">The Royal Casino will bring you the real experience.</h4>
        <a href="/Casino">
          <img src="/images/playnow-bg.png" alt="Play Now" class="w-[148px] h-[56px]" />
        </a>
      </div>
    </div>
  </section>

  <!-- ✅ Second BG image section (optional) -->
  <section class="w-full bg-black">
    <div
      class="bg-no-repeat bg-top bg-center"
      style="background-image: url('/images/second-bg.png'); background-size: 1440px auto; height: 600px;"
    >
      <!-- Add more content here if needed -->
    </div>
  </section>

  <!-- ✅ Your other page content -->
  <ContextAlert class="mt-12" />
  <Markdown content={explainer} class="mb-10 text-lg text-left" />
</Layout>

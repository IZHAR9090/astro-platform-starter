---
import Layout from '../layouts/Layout.astro';
import ContextAlert from '../components/ContextAlert.astro';
import Markdown from '../components/Markdown.astro';

const explainer = `
The Royal Casino will bring you the real experience.
`;
---

<Layout title="World Players Club">

    <!-- âœ… BACKGROUND IMAGE SECTION HERE -->
  <section
    class="relative h-[33vh] bg-cover bg-center bg-no-repeat"
    style="background-image: url('/images/header-bg.jpg');"
  >
    <div class="absolute inset-0 bg-black/40"></div>
    <div class="relative z-10 flex flex-col justify-center h-full px-6 sm:px-12 text-white">
      <h3 class="text-xl mb-2">Welcome!</h3>
      <h1 class="text-4xl font-bold text-yellow-400 mb-4">WPC CASINO</h1>
    </div>
  </section>

    <ContextAlert class="mb-8" />

    <!-- Left-aligned Welcome -->
    <h3 class="mb-4 text-left">Welcome!</h3>

    <!-- Golden H1, left-aligned -->
    <h1 class="mb-5 text-left text-4xl font-bold text-yellow-400">
        WPC CASINO
    </h1>

    <!-- Markdown description, left-aligned -->
    <Markdown content={explainer} class="mb-10 text-lg text-left" />

    <!-- Centered button still -->
    <div class="flex justify-start">
       <a href="/Casino">
  <img src="/images/playnow-bg.png" alt="Play Now" class="w-[148px] h-[56px]" />
</a>




    </div>
</Layout>


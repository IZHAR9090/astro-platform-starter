---
import Layout from '../layouts/Layout.astro';
import ContextAlert from '../components/ContextAlert.astro';
import Markdown from '../components/Markdown.astro';

const explainer = `
The Royal Casino will bring you the real experience.
`;
---

<Layout title="World Players Club">
    <ContextAlert class="mb-8" />

    <!-- First line -->
    <h3 class="mb-4 text-center">Welcome!</h3>

    <!-- Golden h1 below -->
    <h1 class="mb-10 text-center text-4xl font-bold text-yellow-400">
        WPC CASINO
    </h1>

    <!-- Description -->
    <Markdown content={explainer} class="mb-10 text-lg text-center" />

    <!-- Button -->
    <div class="flex justify-center">
        <a href="/Casino" class="btn btn-lg sm:min-w-64">
            PLAY NOW
        </a>
    </div>
</Layout>


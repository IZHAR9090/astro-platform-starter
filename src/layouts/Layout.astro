---
import '../../src/styles/globals.css';
import '@fontsource-variable/inter/wght.css';
import interWoff2 from '@fontsource-variable/inter/files/inter-latin-wght-normal.woff2?url';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=1280" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/png" href="/logo.png" />
    <link rel="preload" as="font" type="font/woff2" href={interWoff2} crossorigin />
  </head>

 <body class="antialiased text-white bg-black">
 
</body>

    
   <!-- ✅ First background image section -->
<section
  class="w-full bg-no-repeat bg-top bg-cover bg-center"
  style="background-image: url('/images/header-bg.png'); height: 800px;"
>
  <div class="w-full h-full px-6 sm:px-12 flex flex-col">
    <Header />
    <main class="grow">
      <slot />
    </main>
    <Footer />
  </div>
</section>

<!-- ✅ Second background image section (begins exactly after 800px height) -->
<section
  class="w-full bg-no-repeat bg-top bg-cover bg-center"
  style="background-image: url('/images/second-bg.png'); height: 800px;"
>
  <!-- Optional content -->
</section>
<section
  class="w-full bg-no-repeat bg-top bg-cover bg-center"
  style="background-image: url('/images/third.png'); height: 800px;"
>
  <!-- Optional content -->
</section>

<section
  class="w-full bg-no-repeat bg-top bg-cover bg-center px-4 sm:px-12 py-6"
  style="background-image: url('/images/forth.png'); height: 800px;"
>
  <div class="max-w-6xl mx-auto flex flex-wrap items-center justify-between">
    
    <!-- Logo & Brand -->
    <div class="flex items-center gap-2">
      <img src="/logo.png" alt="Logo" class="w-8 h-8 object-contain" />
      <span class="text-white font-bold text-lg">World Players</span>
      <span class="text-gray-400 text-lg font-normal">Club</span>
    </div>

    <!-- Social Icons + Phone -->
    <div class="flex items-center gap-2 mt-4 sm:mt-0">
      <!-- YouTube -->
      <a href="#" class="w-8 h-8 bg-[#40404c] text-white flex items-center justify-center rounded-md hover:bg-[#555] transition">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M10 15l5.19-3L10 9v6z"></path>
          <path d="M21.8 8s-.2-1.4-.8-2c-.8-.9-1.7-.9-2.1-1C16.2 4.5 12 4.5 12 4.5h0s-4.2 0-6.9.5c-.4.1-1.3.1-2.1 1-.6.6-.8 2-.8 2S2 9.6 2 11.3v1.3C2 14.4 2.2 16 2.2 16s.2 1.4.8 2c.8.9 1.9.9 2.4 1C7.8 19.5 12 19.5 12 19.5s4.2 0 6.9-.5c.4-.1 1.3-.1 2.1-1 .6-.6.8-2 .8-2s.2-1.6.2-3.4V11c0-1.7-.2-3.3-.2-3.3z"></path>
        </svg>
      </a>

      <!-- Twitter -->
      <a href="#" class="w-8 h-8 bg-[#40404c] text-white flex items-center justify-center rounded-md hover:bg-[#555] transition">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M8 19c7.5 0 11.6-6.2 11.6-11.6v-.5A8.3 8.3 0 0022 5.4a8.2 8.2 0 01-2.4.7 4.2 4.2 0 001.8-2.3 8.2 8.2 0 01-2.6 1 4.1 4.1 0 00-7 3.7 11.6 11.6 0 01-8.4-4.3 4.1 4.1 0 001.3 5.5A4.1 4.1 0 012 9.6v.1a4.1 4.1 0 003.3 4 4.1 4.1 0 01-1.9.1 4.1 4.1 0 003.8 2.8A8.3 8.3 0 012 17.3 11.7 11.7 0 008 19z" />
        </svg>
      </a>

      <!-- Facebook -->
      <a href="#" class="w-8 h-8 bg-[#40404c] text-white flex items-center justify-center rounded-md hover:bg-[#555] transition">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M15 2h-3a5 5 0 00-5 5v3H5v4h2v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3V2z" />
        </svg>
      </a>

      <!-- Phone Button -->
      <a href="tel:02-508-8798" class="flex items-center bg-yellow-500 text-black font-medium px-4 py-2 rounded-md hover:bg-yellow-400 transition ml-2">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h1a2 2 0 012 2v1c0 .55-.22 1.05-.59 1.41l-.75.75a16.02 16.02 0 006.34 6.34l.75-.75c.36-.36.86-.59 1.41-.59h1a2 2 0 012 2v1a2 2 0 01-2 2c-9.39 0-17-7.61-17-17a2 2 0 012-2z"/>
        </svg>
        02-508-8798
      </a>
    </div>
  </div>
</section>




  </body>
</html>

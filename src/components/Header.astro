---
import Logo from '../components/Logo.astro';

const navItems = [
    { linkText: 'Home', href: '/' },
    { linkText: 'Online Casino', href: '/revalidation' },
    { linkText: 'Promotion', href: '/image-cdn' },
    { linkText: 'About Us', href: '/edge' },
    
];
---

<nav class="flex flex-wrap items-center pt-6 pb-16 sm:pt-12 sm:pb-24">
  <!-- Logo stays on the left -->
  <a href="/">
    <Logo />
  </a>

  <!-- Add space between logo and nav here -->
  {
    !!navItems?.length && (
      <ul class="flex flex-wrap gap-x-4 gap-y-1 ml-8"> <!-- ← this adds space -->
        {navItems.map((item) => (
          <li>
            <a href={item.href} class="inline-block px-1.5 py-1 sm:px-3 sm:py-2">
              {item.linkText}
            </a>
          </li>
        ))}
      </ul>
    )
  }
</nav>

